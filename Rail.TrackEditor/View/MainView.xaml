<mvvm:AppView x:Class="Rail.TrackEditor.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mvvm="clr-namespace:Rail.Mvvm;assembly=Rail.Mvvm"
        xmlns:vm="clr-namespace:Rail.TrackEditor.ViewModel"
        xmlns:v="clr-namespace:Rail.TrackEditor.View"
        xmlns:tr="clr-namespace:Rail.Tracks;assembly=Rail.Tracks"
        xmlns:ctrl="clr-namespace:Rail.TrackEditor.Controls"
        xmlns:local="clr-namespace:Rail.TrackEditor"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="880" Width="1200">
    <mvvm:AppView.Resources>
        <mvvm:BindingProxy x:Key="MainBindingProxy" Data="{Binding}" />
    </mvvm:AppView.Resources>
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar >
                <Button Command="{Binding SaveCommand}">
                    <Image Source="/Rail.TrackEditor;component/Images/Save.png" Width="16" Height="16" />
                </Button>
            </ToolBar>
        </ToolBarTray>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="."/>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="trackTypes" Grid.Column="0" ItemsSource="{Binding TrackTypes}" SelectedIndex="0" Margin="8" >
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="New Track Type" Command="{Binding NewTrackTypeCommand}" />
                    </ContextMenu>
                </ListBox.ContextMenu>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" >
                            <TextBlock.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="New Track Type" Command="{Binding Data.NewTrackTypeCommand, Source={StaticResource MainBindingProxy}}" />
                                    <MenuItem Header="Delete" Command="{Binding Data.DeleteTrackTypeCommand, Source={StaticResource MainBindingProxy}}" CommandParameter="{Binding .}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <v:TrackTypeView  Grid.Column="1" DataContext="{Binding ElementName=trackTypes, Path=SelectedItem}" Margin="8"/>
        </Grid>
    </DockPanel>
</mvvm:AppView>
