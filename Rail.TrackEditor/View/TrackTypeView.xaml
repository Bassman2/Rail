<UserControl x:Class="Rail.TrackEditor.View.TrackTypeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mvvm="clr-namespace:Rail.Mvvm;assembly=Rail.Mvvm"
             xmlns:vm="clr-namespace:Rail.TrackEditor.ViewModel"
             xmlns:v="clr-namespace:Rail.TrackEditor.View"
             xmlns:tr="clr-namespace:Rail.Tracks;assembly=Rail.Tracks"
             xmlns:ctrl="clr-namespace:Rail.TrackEditor.Controls"
             xmlns:local="clr-namespace:Rail.TrackEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Margin="3">
        <Grid.Resources>
            <mvvm:BindingProxy x:Key="TrackTypeBindingProxy" Data="{Binding}" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Name" Grid.Column="0" Grid.Row="0">
            <DataGrid 
                ItemsSource="{Binding Names}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3" >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Language}" Header="Language" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Track Type Name" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Lenths" Grid.Column="1" Grid.Row="0">
            <DataGrid 
                x:Name="lengths"
                ItemsSource="{Binding Lengths}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}"  Header="Name" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Value}"  Header="Length (mm)" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Radii" Grid.Column="2" Grid.Row="0">
            <DataGrid 
                x:Name="radii"
                ItemsSource="{Binding Radii}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Value}" Header="Radius (mm)" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Angles" Grid.Column="3" Grid.Row="0">
            <DataGrid 
                x:Name="angles"
                ItemsSource="{Binding Angles}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Value}" Header="Angle (°)" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Parameter" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding LabelWith}" SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition  SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="Manufacturer"/>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Manufacturer}" Margin="3"/>
                <Label Grid.Column="2" Grid.Row="0" Content="Gauge"/>
                <ComboBox Grid.Column="3" Grid.Row="0" ItemsSource="{Binding Gauges}" SelectedValue="{Binding Gauge}" Margin="3"/>
                <Label Grid.Column="4" Grid.Row="0" Content="Dock Type"/>
                <TextBox Grid.Column="5" Grid.Row="0" Text="{Binding DockType}" Margin="3"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Drawing" Grid.Column="0"  Grid.ColumnSpan="4" Grid.Row="2">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Rail Type"/>
                <ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding RailTypes}" SelectedValue="{Binding RailType}" Margin="3"/>
                <Label Grid.Column="0" Grid.Row="1" Content="Rail Width"/>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding RailWidth}" Margin="3"/>

                <Label Grid.Column="2" Grid.Row="0" Content="Sleeper Type"/>
                <ComboBox Grid.Column="3" Grid.Row="0" ItemsSource="{Binding SleeperTypes}" SelectedValue="{Binding SleeperType}" Margin="3"/>
                <Label Grid.Column="2" Grid.Row="1" Content="Sleeper Width"/>
                <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding SleeperWidth}" Margin="3"/>

                <Label Grid.Column="4" Grid.Row="0" Content="Ballast Type"/>
                <ComboBox Grid.Column="5" Grid.Row="0" ItemsSource="{Binding BallastTypes}" SelectedValue="{Binding BallastType}" Margin="3"/>
                <Label Grid.Column="4" Grid.Row="1" Content="Ballast Width"/>
                <TextBox Grid.Column="5" Grid.Row="1" Text="{Binding BallastWidth}" Margin="3"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Clear Room" Grid.Column="0"  Grid.ColumnSpan="4" Grid.Row="3">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition  SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="Wagon Max Length"/>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding WagonMaxLength}" Margin="3"/>
                <Label Grid.Column="2" Grid.Row="0" Content="Wagon Max Width"/>
                <TextBox Grid.Column="3" Grid.Row="0" Text="{Binding WagonMaxWidth}" Margin="3"/>
                <Label Grid.Column="4" Grid.Row="0" Content="Wagon Max Bogie Distance"/>
                <TextBox Grid.Column="5" Grid.Row="0" Text="{Binding WagonMaxBogieDistance}" Margin="3"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Track" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="4">

            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="trackList" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" ItemsSource="{Binding Tracks}" SelectedIndex="0" Margin="3" >
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="New Straight Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Straight}" />
                            <MenuItem Header="New Curved Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Curved}" />
                            <MenuItem Header="New Turnout Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Turnout}" />
                            <MenuItem Header="New Curved Turnout Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.CurvedTurnout}" />
                            <MenuItem Header="New Double Slip Switch Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.DoubleSlipSwitch}" />
                            <MenuItem Header="New Double Turnout Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.DoubleTurnout}" />
                            <MenuItem Header="New Y-Turnout Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.YTurnout}" />
                            <MenuItem Header="New Crossing Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Crossing}" />
                            <MenuItem Header="New Bumper Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Bumper}" />
                            <MenuItem Header="New Adapter Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Adapter}" />
                            <MenuItem Header="New Turntable Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Turntable}" />
                            <MenuItem Header="New Transfer Table Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.TransferTable}" />
                            <MenuItem Header="New End Piece Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.EndPiece}" />
                            <MenuItem Header="New Straight Adjustment Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.StraightAdjustme}" />
                            <MenuItem Header="New Double Crossover Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.DoubleCrossover}" />
                            <MenuItem Header="New Flex Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Flex}" />
                            <MenuItem Header="New Group Track" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Group}" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" >
                                <TextBlock.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="New Straight Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Straight}" />
                                        <MenuItem Header="New Curved Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Curved}" />
                                        <MenuItem Header="New Turnout Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Turnout}" />
                                        <MenuItem Header="New Curved Turnout Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.CurvedTurnout}" />
                                        <MenuItem Header="New Double Slip Switch Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.DoubleSlipSwitch}" />
                                        <MenuItem Header="New Double Turnout Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.DoubleTurnout}" />
                                        <MenuItem Header="New Y-Turnout Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.YTurnout}" />
                                        <MenuItem Header="New Crossing Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Crossing}" />
                                        <MenuItem Header="New Bumper Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Bumper}" />
                                        <MenuItem Header="New Adapter Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Adapter}" />
                                        <MenuItem Header="New Turntable Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Turntable}" />
                                        <MenuItem Header="New Transfer Table Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.TransferTable}" />
                                        <MenuItem Header="New End Piece Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.EndPiece}" />
                                        <MenuItem Header="New Straight Adjustment Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.StraightAdjustme}" />
                                        <MenuItem Header="New Double Crossover Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.DoubleCrossover}" />
                                        <MenuItem Header="New Flex Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Flex}" />
                                        <MenuItem Header="New Group Track" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Group}" />
                                        <MenuItem Header="Delete" Command="{Binding Data.DeleteTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{Binding .}" />
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ctrl:TrackControl Grid.Column="1" Grid.Row="0" Track="{Binding Track}" DataContext="{Binding ElementName=trackList, Path=SelectedItem}" BorderBrush="LightGray" Margin="3" BorderThickness="1" />
                <ctrl:RailControl Grid.Column="2" Grid.Row="0" Track="{Binding Track}" DataContext="{Binding ElementName=trackList, Path=SelectedItem}" BorderBrush="LightGray" Margin="3" BorderThickness="1"/>
                <ContentControl Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding ElementName=trackList, Path=SelectedItem}" Margin="3" >
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type vm:TrackStraightViewModel}" >
                            <v:TrackStraightView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackCurvedViewModel}" >
                            <v:TrackCurvedView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackTurnoutViewModel}" >
                            <v:TrackTurnoutView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackCurvedTurnoutViewModel}" >
                            <v:TrackCurvedTurnoutView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackDoubleSlipSwitchViewModel}" >
                            <v:TrackDoubleSlipSwitchView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackDoubleTurnoutViewModel}" >
                            <v:TrackDoubleTurnoutView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackYTurnoutViewModel}" >
                            <v:TrackYTurnoutView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackCrossingViewModel}" >
                            <v:TrackCrossingView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackBumperViewModel}" >
                            <v:TrackBumperView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackAdapterViewModel}" >
                            <v:TrackAdapterView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackTurntableViewModel}" >
                            <v:TrackTurntableView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackTransferTableViewModel}" >
                            <v:TrackTransferTableView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackEndPieceViewModel}" >
                            <v:TrackEndPieceView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackStraightAdjustmentViewModel}" >
                            <v:TrackStraightAdjustmentView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackDoubleCrossoverViewModel}" >
                            <v:TrackDoubleCrossoverView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackFlexViewModel}" >
                            <v:TrackFlexView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackGroupViewModel}" >
                            <v:TrackGroupView/>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
