<UserControl x:Class="Rail.TrackEditor.View.TrackTypeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mvvm="clr-namespace:Rail.Mvvm;assembly=Rail.Mvvm"
             xmlns:vm="clr-namespace:Rail.TrackEditor.ViewModel"
             xmlns:v="clr-namespace:Rail.TrackEditor.View"
             xmlns:tr="clr-namespace:Rail.Tracks;assembly=Rail.Tracks"
             xmlns:ctrl="clr-namespace:Rail.TrackEditor.Controls"
             xmlns:local="clr-namespace:Rail.TrackEditor.View"
             xmlns:lang="clr-namespace:Rail.TrackEditor.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Margin="3">
        <Grid.Resources>
            <mvvm:BindingProxy x:Key="TrackTypeBindingProxy" Data="{Binding}" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Name" Grid.Column="0" Grid.Row="0">
            <DataGrid 
                ItemsSource="{Binding Names}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3" >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Language}" Header="{x:Static lang:Resources.MainLanguage}" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header="{x:Static lang:Resources.MainTrackTypeName}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Lenths" Grid.Column="1" Grid.Row="0">
            <DataGrid 
                x:Name="lengths"
                ItemsSource="{Binding Lengths}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="{x:Static lang:Resources.MainName}" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Value}" Header="{x:Static lang:Resources.MainLengthmm}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Radii" Grid.Column="2" Grid.Row="0">
            <DataGrid 
                x:Name="radii"
                ItemsSource="{Binding Radii}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="{x:Static lang:Resources.MainName}" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Value}" Header="{x:Static lang:Resources.MainRadiusmm}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Angles" Grid.Column="3" Grid.Row="0">
            <DataGrid 
                x:Name="angles"
                ItemsSource="{Binding Angles}" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                GridLinesVisibility="None"
                HeadersVisibility="Column" 
                CanUserResizeColumns="True"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                Background="White"
                Margin="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="{x:Static lang:Resources.MainName}" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Value}" Header="{x:Static lang:Resources.MainAngledeg}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Parameter" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="{x:Static lang:Resources.MainManufacturer}"/>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Manufacturer}" Margin="3"/>
                <Label Grid.Column="2" Grid.Row="0" Content="{x:Static lang:Resources.MainGauge}"/>
                <ComboBox Grid.Column="3" Grid.Row="0" ItemsSource="{Binding Gauges}" SelectedValue="{Binding Gauge}" Margin="3"/>
                <Label Grid.Column="4" Grid.Row="0" Content="{x:Static lang:Resources.MainDockType}"/>
                <TextBox Grid.Column="5" Grid.Row="0" Text="{Binding DockType}" Margin="3"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Drawing" Grid.Column="0"  Grid.ColumnSpan="4" Grid.Row="2">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="{x:Static lang:Resources.MainRailType}"/>
                <ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding RailTypes}" SelectedValue="{Binding RailType}" Margin="3"/>
                <Label Grid.Column="0" Grid.Row="1" Content="{x:Static lang:Resources.MainRailWidth}"/>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding RailWidth}" Margin="3"/>

                <Label Grid.Column="2" Grid.Row="0" Content="{x:Static lang:Resources.MainSleeperType}"/>
                <ComboBox Grid.Column="3" Grid.Row="0" ItemsSource="{Binding SleeperTypes}" SelectedValue="{Binding SleeperType}" Margin="3"/>
                <Label Grid.Column="2" Grid.Row="1" Content="{x:Static lang:Resources.MainSleeperWidth}"/>
                <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding SleeperWidth}" Margin="3"/>

                <Label Grid.Column="4" Grid.Row="0" Content="{x:Static lang:Resources.MainBallastType}"/>
                <ComboBox Grid.Column="5" Grid.Row="0" ItemsSource="{Binding BallastTypes}" SelectedValue="{Binding BallastType}" Margin="3"/>
                <Label Grid.Column="4" Grid.Row="1" Content="{x:Static lang:Resources.MainBallastWidth}"/>
                <TextBox Grid.Column="5" Grid.Row="1" Text="{Binding BallastWidth}" Margin="3"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Clear Room" Grid.Column="0"  Grid.ColumnSpan="4" Grid.Row="3">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MinWidth="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MinWidth="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="{x:Static lang:Resources.MainWagonMaxWidth}"/>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding WagonMaxWidth}" Margin="3"/>
                <Label Grid.Column="2" Grid.Row="0" Content="{x:Static lang:Resources.MainWagonMaxBogieDistance}"/>
                <TextBox Grid.Column="3" Grid.Row="0" Text="{Binding WagonMaxBogieDistance}" Margin="3"/>
                <Label Grid.Column="4" Grid.Row="0" Content="{x:Static lang:Resources.MainWagonMaxBogieFrontDistance}"/>
                <TextBox Grid.Column="5" Grid.Row="0" Text="{Binding WagonMaxBogieFrontDistance}" Margin="3"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Track" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="4">

            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="trackList" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" ItemsSource="{Binding Tracks}" SelectedIndex="0" Margin="3" >
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{x:Static lang:Resources.MainNewStraightTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Straight}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewCurvedTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Curved}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewTurnoutTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Turnout}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewCurvedTurnoutTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.CurvedTurnout}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewDoubleSlipSwitchTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.DoubleSlipSwitch}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewThreeWayTurnoutTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.ThreeWayTurnout}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewYTurnoutTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.YTurnout}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewCrossingTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Crossing}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewBumperTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Bumper}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewAdapterTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Adapter}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewTurntableTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Turntable}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewTransferTableTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.TransferTable}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewEndPieceTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.EndPiece}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewStraightAdjustmentTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.StraightAdjustment}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewDoubleCrossoverTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.DoubleCrossover}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewFlexTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Flex}" />
                            <MenuItem Header="{x:Static lang:Resources.MainNewGroupTrack}" Command="{Binding NewTrackCommand}" CommandParameter="{x:Static tr:TrackTypes.Group}" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" >
                                <TextBlock.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="{x:Static lang:Resources.MainNewStraightTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Straight}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewCurvedTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Curved}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewTurnoutTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Turnout}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewCurvedTurnoutTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.CurvedTurnout}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewDoubleSlipSwitchTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.DoubleSlipSwitch}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewThreeWayTurnoutTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.ThreeWayTurnout}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewYTurnoutTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.YTurnout}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewCrossingTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Crossing}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewBumperTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Bumper}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewAdapterTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Adapter}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewTurntableTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Turntable}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewTransferTableTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.TransferTable}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewEndPieceTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.EndPiece}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewStraightAdjustmentTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.StraightAdjustment}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewDoubleCrossoverTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.DoubleCrossover}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewFlexTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Flex}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainNewGroupTrack}" Command="{Binding Data.NewTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{x:Static tr:TrackTypes.Group}" />
                                        <MenuItem Header="{x:Static lang:Resources.MainDeleteTrack}" Command="{Binding Data.DeleteTrackCommand, Source={StaticResource TrackTypeBindingProxy}}" CommandParameter="{Binding .}" />
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ctrl:TrackControl Grid.Column="1" Grid.Row="0" Track="{Binding Track}" DataContext="{Binding ElementName=trackList, Path=SelectedItem}" ShowRail="False" BorderBrush="LightGray" Margin="3" BorderThickness="1" Background="White" />
                <ctrl:TrackControl Grid.Column="2" Grid.Row="0" Track="{Binding Track}" DataContext="{Binding ElementName=trackList, Path=SelectedItem}" ShowRail="True"  BorderBrush="LightGray" Margin="3" BorderThickness="1" Background="White"/>
                <ContentControl Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding ElementName=trackList, Path=SelectedItem}" Margin="3" >
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type vm:TrackStraightViewModel}" >
                            <v:TrackStraightView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackCurvedViewModel}" >
                            <v:TrackCurvedView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackTurnoutViewModel}" >
                            <v:TrackTurnoutView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackCurvedTurnoutViewModel}" >
                            <v:TrackCurvedTurnoutView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackDoubleSlipSwitchViewModel}" >
                            <v:TrackDoubleSlipSwitchView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackThreeWayTurnoutViewModel}" >
                            <v:TrackThreeWayTurnout/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackYTurnoutViewModel}" >
                            <v:TrackYTurnoutView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackCrossingViewModel}" >
                            <v:TrackCrossingView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackBumperViewModel}" >
                            <v:TrackBumperView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackAdapterViewModel}" >
                            <v:TrackAdapterView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackTurntableViewModel}" >
                            <v:TrackTurntableView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackTransferTableViewModel}" >
                            <v:TrackTransferTableView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackEndPieceViewModel}" >
                            <v:TrackEndPieceView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackStraightAdjustmentViewModel}" >
                            <v:TrackStraightAdjustmentView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackDoubleCrossoverViewModel}" >
                            <v:TrackDoubleCrossoverView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackFlexViewModel}" >
                            <v:TrackFlexView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TrackGroupViewModel}" >
                            <v:TrackGroupView/>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
